body {
    padding: 0.2em 2em;
    max-width: 960px;
    margin: 0 auto 1em;
    background-image: url('<%= asset_path 'cross_scratches.png' %>');
    font-family: Arial, sans-serif;
}
.flash, #error_explanation {
    padding: 15px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    margin-bottom: 25px;
}
.flash.alert, .flash.error, #error_explanation {
    background-color: #F5BABA;
}
.flash.notice {
    background-color: #BAF5BC;
}
